#!groovy
pipeline {
	agent none
  stages {
  	stage('Maven Install') {
    	agent {
      	docker {
        	image 'maven:3.5.0'
        }
      }
      steps {
      	sh 'mvn clean install'
      }
    }

    stage('Docker Build') {
    	agent any
      steps {
      	sh 'docker build -t scalian_training/java-app:1.0-SNAPSHOT -f devops/Dockerfile .'
      }
    }
  }
}