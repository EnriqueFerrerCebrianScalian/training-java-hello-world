#!groovy

//@Library('functions')_


pipeline {
	agent any

  environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub-cred-adrianscalian')
    TAG_NAME=getLastGitTag()
	}


  stages {

    stage('Maven Install') {
    	agent {
      	docker {
        	image 'maven:3.8.6-openjdk-11-slim'
        }
      }
      steps {
      	sh 'mvn clean install'
      }
    }


    stage('Docker Build') {
      steps {
      	sh 'docker build -t scalian_training/java-app -f devops/Dockerfile .'
      }
    }

    stage('Docker Login') {
      steps {
      	sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }


    stage('Docker Push') {
      steps {
      	sh 'docker tag scalian_training/java-app adrianscalian/scalian_training_java-app:$TAG_NAME'
        sh 'docker push adrianscalian/scalian_training_java-app:$TAG_NAME'
      }
    }

    stage('Docker Publish') {
    	when {
        tag 'release-*'
      }
      steps {
      	echo "Deploying $TAG_NAME"
      }
    }
  }

  post {
    always  {
        sh 'docker logout'
        archiveArtifacts artifacts: 'target/*.jar', fingerprint: true

    }
    success {
      script{
        if (env.BRANCH_NAME == 'master') {
        // send mail
        } else if (env.BRANCH_NAME.startsWith('PR')) {
          // also send email to tell people their PR status
        } else {
          // this is some other branch
        } 
      }
    }
  }
}


def getLastGitTag() {
    sh "git tag --sort version:refname | tail -1 > version.tmp"
    String tag = readFile 'version.tmp'
    echo "Tag, ${tag}." 
    return tag
}